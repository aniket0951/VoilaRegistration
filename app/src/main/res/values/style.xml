<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- reference our hint & error styles -->
        <item name="android:theme">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox
        </item>
        <item name="android:fontFamily">@font/metropolis_light</item>
        <item name="hintTextAppearance">@style/textInputLayoutHintText</item>
        <item name="errorTextAppearance">@style/textInputLayoutErrorText</item>
        <item name="helperTextTextAppearance">@style/textInputLayoutHelperText</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="textInputLayoutErrorText" parent="TextAppearance.Design.Error">
        <item name="android:fontFamily">@font/metropolis_light</item>
        <item name="android:textColorPrimary">@color/main_errorColor</item>
        <item name="android:textSize">14sp</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="textInputLayoutHintText" parent="TextAppearance.Design.Hint">
        <item name="android:fontFamily">@font/metropolis_light</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>
    <style name="textInputLayoutHelperText" parent="TextAppearance.Design.HelperText">
        <item name="android:fontFamily">@font/metropolis_light</item>
        <item name="android:textColorPrimary">@color/colorMain_light_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>


    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/black</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/primary_color</item>
        <item name="colorControlNormal">@color/primary_color</item>
        <item name="colorControlActivated">@color/primary_color</item>
    </style>

</resources>